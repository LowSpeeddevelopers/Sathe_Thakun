<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFF"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        card_view:cardCornerRadius="@dimen/_20sdp"
        card_view:contentPadding="25dp"
        card_view:cardElevation="5dp"
        >

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Sign In"
                        android:textSize="30dp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Sign Up"
                        android:textSize="30dp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Name"
                        android:textSize="18dp"
                        android:paddingStart="20dp"
                        android:paddingBottom="10dp"/>

                    <EditText
                        android:id="@+id/edt_signup_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint=""
                        android:background="@drawable/edit_text_border"
                        android:textColor="#000"
                        android:inputType="text"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Email"
                        android:textSize="18dp"
                        android:paddingStart="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"/>

                    <EditText
                        android:id="@+id/edt_signup_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint=""
                        android:inputType="textEmailAddress"
                        android:background="@drawable/edit_text_border"
                        android:textColor="#000"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Phone"
                        android:textSize="18dp"
                        android:paddingStart="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"/>

                    <EditText
                        android:id="@+id/edt_signup_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint=""
                        android:inputType="phone"
                        android:background="@drawable/edit_text_border"
                        android:textColor="#000"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Age"
                        android:textSize="18dp"
                        android:paddingStart="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"/>

                    <EditText
                        android:id="@+id/edt_signup_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint=""
                        android:inputType="number"
                        android:background="@drawable/edit_text_border"
                        android:textColor="#000"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Address"
                        android:textSize="18dp"
                        android:paddingStart="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"/>

                    <EditText
                        android:id="@+id/edt_signup_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint=""
                        android:inputType="text"
                        android:background="@drawable/edit_text_border"
                        android:textColor="#000"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Password"
                        android:textSize="18dp"
                        android:paddingStart="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"/>

                    <EditText
                        android:id="@+id/edt_signup_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint=""
                        android:inputType="textPassword"
                        android:background="@drawable/edit_text_border"
                        android:textColor="#000"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/text_color"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Re-Type Password"
                        android:textSize="18dp"
                        android:paddingStart="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="20dp"/>

                    <EditText
                        android:id="@+id/edt_signup_retype_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:hint=""
                        android:inputType="textPassword"
                        android:background="@drawable/edit_text_border"
                        android:textColor="#000"
                        android:textSize="25sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:textColor="#FFFFFF"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:text="Sign Up"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:background="@drawable/ripple_button"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>


</LinearLayout>